<h1>Burgers</h1>

<h2>Burgers to eat!</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> cats/cat-block eaten=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Poop</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> cats/cat-block eaten=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Type:</label>
    <input type="text" id="newBurgerInput" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
